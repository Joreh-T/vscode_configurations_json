{
    //字体
    "editor.fontFamily": "JetBrainsMono NF",
    "editor.fontLigatures": true, // 连写
    "editor.fontWeight": "normal",
    "editor.fontSize": 17,
    "debug.console.fontSize": 16,
    "terminal.integrated.fontSize": 16,
    "editor.lineHeight": 1.4,
    "files.autoSave": "afterDelay",
    //部分窗口UI//
    "window.titleBarStyle": "custom",
    "window.menuBarVisibility": "toggle", // 按下alt才会出现左上角菜单栏
    "window.commandCenter": true, // 顶部显示命令窗口
    "editor.minimap.maxColumn": 60, // 代码地图大小
    "editor.wordWrapColumn": 120, // 一行最大长度
    // 控制折行的方式。
    //  - off: 永不换行。
    //  - on: 将在视区宽度处换行。
    //  - wordWrapColumn: 在 `editor.wordWrapColumn` 处折行。
    //  - bounded: 在视区宽度和 `editor.wordWrapColumn` 中的较小值处折行。
    "editor.wordWrap": "bounded",
    // 在 `editor.wordWrap` 为 `wordWrapColumn`  或 `bounded` 时，控制编辑器的折行列。
    // 控制折行的缩进。
    //  - none: 没有缩进。折行从第 1 列开始。
    //  - same: 折行的缩进量与其父级相同。
    //  - indent: 折行的缩进量比其父级多 1。
    //  - deepIndent: 折行的缩进量比其父级多 2。
    "editor.wrappingIndent": "same",
    "files.trimTrailingWhitespace": true, // 删除行尾空格
    "editor.stickyScroll.enabled": true, // 浏览函数时，固定函数名
    //better comments//
    "better-comments.tags": [
        {
            "tag": "BUG",
            "color": "#FF2D00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        // 代码需要修正
        {
            "tag": "FIXME",
            "color": "#FF2D00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "?",
            "color": "#3498DB",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "//",
            "color": "#474747",
            "strikethrough": true,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "todo",
            "color": "#FF8C00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "*",
            "color": "#98C379",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        // 提示
        {
            "tag": "HINT",
            "color": "#2faf64",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        // 描述代码功能
        {
            "tag": "NOTE",
            "color": "#00b7e4",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        }
